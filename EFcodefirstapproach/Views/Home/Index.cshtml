@model IEnumerable<EFcodefirstapproach.Models.Dtr>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MtId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.current)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.voltage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MtId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.current)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.voltage)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MtId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MtId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MtId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
